{
    "schema_version": 1,

    "quilt_loader": {
        "group": "${group}",
        "id": "${modid}",
        "version": "${version}",

        "intermediate_mappings" : "net.fabricmc:intermediary",

        "metadata": {
            "name": "${display_name}",
            "description": "Directional shade for Cosmic Reach.",
            "contributors": {
                "StartsMercury": "Author"
            },

            "contact": {
                "issues": "https://github.com/StartsMercury/simply-cosmic-shading/issues",
                "sources": "https://github.com/StartsMercury/simply-cosmic-shading"
            },

            "icon": "assets/simply-cosmic-shading/icon.png"
        },

        "entrypoints": {
        },

        "depends": [
            {
                "id": "cosmicreach",
                "versions": "*"
            }
        ],
        "recommends": [
            {
                "id": "cosmicreach",
                "versions": "${cosmicreach_version}"
            }
        ]
    },

    "mixin": "simply-cosmic-shading.mixins.json"
}
